@model SignInViewModel

@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="SignIn">
            <div asp-validation-summary="ModelOnly"></div>
            <input class="text email" asp-for="Email" placeholder="Email" required="">
            <input class="text" asp-for="Password" placeholder="Password" required="">
          
            <div class="wthree-text">
                <label class="anim">
                    <input type="checkbox" asp-for="RememberMe" class="checkbox" required="">
                    <span>Remember me..</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNIN">
        </form>
        <p>Don't you have an Account? <a asp-action="SignUp"> Register Now!</a></p>
    </div>
</div>


@section ValidationScripts
{
    <partial name="_ValidationScriptsPartial" />
} 
