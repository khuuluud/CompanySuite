 
@model IEnumerable<EmployeeDTO>


@{
    ViewData["Title"] = "Employees";
   
}

<h1 class="p-3">All Employees</h1>

<a asp-controller="Employee" asp-action="Create" class="btn btn-primary m-3">Create new employee</a>
@if(Model.Count() > 0)
{
    <table class="table table-striped table-hover text-center">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E => E.Name)</th>
                <th>@Html.DisplayNameFor(E => E.Age)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>@Html.DisplayNameFor(E => E.Salary)</th>
                <th>@Html.DisplayNameFor(E => E.IsActive)</th>
                <th>@Html.DisplayNameFor(E => E.EmployeeType)</th>
                <th>@Html.DisplayNameFor(E => E.Gender)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="">
            @foreach (var employee in Model)
            {
                <tr>
                    
                    <td>@Html.DisplayFor(E => employee.Name)</td>
                    <td>@Html.DisplayFor(E => employee.Age)</td>
                    <td>@Html.DisplayFor(E => employee.Email)</td>
                    <td>@Html.DisplayFor(E => employee.Salary)</td>
                    <td>@Html.DisplayFor(E => employee.IsActive)</td>
                    <td>@Html.DisplayFor(E => employee.EmployeeType)</td>
                    <td>@Html.DisplayFor(E => employee.Gender)</td>
                    <td>
                   
                        <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-warning">
                            <i class="fa-sharp-duotone fa-solid fa-eye"></i>Details
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-success">
                            <i class="fa-duotone fa-solid fa-pen-to-square"></i>Update
                        </a>
                    </td>
                    <td>
                     
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#DeleteModal">
                            <i class="fa-duotone fa-solid fa-pen-to-square"></i> Delete
                        </button>
                    </td>
                </tr>

                //Modal

                <div class="modal fade" id="DeleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Employee</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                               Do you want to delete this employee?
                            </div>
                            <div class="modal-footer">
                                <form asp-action="Delete" method="post" asp-route-id="@employee.Id"> 
                                    <button type="button" class="btn btn-secondary " data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-danger ">Delete</button>
                              </form> 
                               
                            </div>
                        </div>
                    </div>
                </div>
            }

        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3 ">

        <h3>There is no employee</h3>

    </div>
}

