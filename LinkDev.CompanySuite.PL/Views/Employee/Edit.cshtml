
@model DepartmentEditViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center align-items-center flex-column">
    <h1 class="col-md-6">Edit department</h1>

    <form asp-action="Edit"  class="col-md-6">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group m-2">
            <label class="form-label" asp-for="Code">Code</label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>

        </div>

        <div class="form-group m-2">
            <label class="form-label" asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>

        <div class="form-group m-2">
            <label class="form-label" asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>


        </div>

        <div class="form-group m-2">
            <label class="form-label" asp-for="CreationDate">Creation Date</label>
            <input type="date" asp-for="CreationDate" class="form-control" />

        </div>
        <div class="m-3">

            <input type="submit" value="Save" class="btn btn-success"/>
            <a asp-action="Index" class="btn btn-light">Cancel</a>
        </div>
    </form>
</div>

